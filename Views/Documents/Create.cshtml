@model Doctrack.Models.DocumentViewModel

@{
  ViewData["Title"] = "Create Document";
}

<h2>Create</h2>
<h3>Document</h3>
<hr />

<form asp-action="Create">
  <div class="form-group">
    <label asp-for="Document.ReceiptDate">Receipt Date</label>
    <input asp-for="Document.ReceiptDate" class="from-control" />
    <span asp-validation-for="Document.ReceiptDate" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Document.Id">Document No.</label>
    <input asp-for="Document.Id" class="form-control" autocomplete="off"/>
    <span asp-validation-for="Document.Id" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Document.DocType_Id">Document Title</label>
    <select asp-for="Document.DocType_Id">
      <option value=0 selected disabled hidden>Select document title</option>
      @foreach (var item in ViewBag.DocTypesTitle)
      {
        <option value=@item.Value>@item.Text</option>
      }
    </select>
    <span asp-validation-for="Document.DocType_Id" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Employee.Job_Id">Job Title</label>
    <select asp-for="Employee.Job_Id">
      <option value=0 selected disabled hidden>Select job title</option>
      @foreach (var item in ViewBag.JobsTitle)
      { 
        <option value=@item.Value>@item.Text</option>
      }
    </select>
    <span asp-validation-for="Employee.Job_Id" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Employee.Rank_Id">Title</label>
    <select asp-for="Employee.Rank_Id">
      <option value=0 selected disabled hidden>Select your title</option>
      @foreach (var item in ViewBag.RanksTitle)
      { 
        <option value=@item.Value>@item.Text</option>
      }
    </select>
    <span asp-validation-for="Employee.Rank_Id" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Employee.FirstName">First Name</label>
    <input asp-for="Employee.FirstName" class="form-control" autocomplete="off" />
    <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Employee.LastName">Last Name</label>
    <input asp-for="Employee.LastName" class="form-control" autocomplete="off" />
    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Document.Operation">Operation</label>
    <input asp-for="Document.Operation" class="form-control" autocomplete="off" />
    <span asp-validation-for="Document.Operation" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Document.OperationDate" class="control-label">Op.Date</label>
    <input asp-for="Document.OperationDate" class="form-control" />
    <span asp-validation-for="Document.OperationDate" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Document.CommandOrder">Command Order</label>
    <input asp-for="Document.CommandOrder" class="form-control" autocomplete="off" />
    <span asp-validation-for="Document.CommandOrder" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Document.RemarkAll">Remarks</label>
    <input asp-for="Document.RemarkAll" class="form-control" autocomplete="off" />
    <span asp-validation-for="Document.RemarkAll" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="DocumentDetail.Remark">Remark</label>
    <input asp-for="DocumentDetail.Remark" class="form-control" autocomplete="off" />
    <span asp-validation-for="DocumentDetail.Remark" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Document.User">User</label>
    <input asp-for="Document.User" class="form-control" autocomplete="off" />
    <span asp-validation-for="Document.User" class="text-danger"></span>
    </div>

  <div class="form-group">
    <input type="submit" value="Create" class="btn btn-primary" />
  </div>
</form>

<div>
  <a asp-action="Index">Back to List</a>
</div>