@model IEnumerable<Document>

@{
  ViewData["Title"] = "Documents List";
}

<div class="container-header">
  <h2>Documents</h2>
  <div style="display: flex; justify-content: space-between; width: 13rem;">
    <div id="ex-excel"class="ex-btn">
      <i class="bi bi-download"></i>
      &nbsp;
      Export
    </div>
    <div id="im-excel" class="ex-btn">
      <i class="bi bi-upload"></i>
      &nbsp;
      Import
    </div>
  </div>
</div>
<hr />

<div class="flex-action">
  <div class="wrapper-privilege">
    <a
      asp-action="Create" 
      class="text-decoration-none button"
      style="color:white;"
    >
      <i class="bi bi-file-earmark-plus-fill"></i>
      &nbsp;
      Document
    </a>
    @if (ViewBag.isAdmin) {
      <a
        id="clear-docd-btn"
        class="button button-danger delete-btn"
        style="color:white;"
      >
        <i class="bi bi-trash3-fill"></i>
        &nbsp;
        Clear
      </a>
    }
  </div>
  <div class="search-contrainer">
    <div class="search-box-document">
      <label for="search-docNo">Document No.</label>
      <input id="search-docNo" class="search-input" placeholder="Document No..." />
    </div>
    <div class="search-box-document">
      <label for="search-docType">Document Type</label>
      <input id="search-docType" class="search-input" placeholder="Document Type..." />
    </div>
    <div class="search-box-document">
      <label for="search-docTitle">Document Title</label>
      <input id="search-docTitle" class="search-input" placeholder="Document Title..." />
    </div>
    <div class="search-box-document">
      <label for="search-employee">Employee Name</label>
      <input id="search-employee" class="search-input" placeholder="Employee Name..." />
    </div>
    <div id="search-document-btn">
      <i class="bi bi-search"></i>&nbsp;Search
    </div>
  </div>
  <div class="search-expand-btn">
    <div class="line-separate"></div>
    <i class="bi bi-list"></i>
    <div class="line-separate"></div>
  </div>
</div>

<!-- Render document table -->
<div id="container-document">
  <div class="container-tab">
    <div id="tab-user" class="active"><p>User</p></div>
    @if (ViewBag.isAdmin)
    {
      <div id="tab-all"><p>All</p></div>
    }
  </div>
  <div id="document-table">
    <div class="container-wrapper">
      <div class="flex-container">
        <div class="flex-header stick-header">
          <div class="cell">Receipt Date</div>
          <div class="cell">Documents No.</div>
          <div class="cell">Doc.Type</div>
          <div class="cell cell-title">Doc.Title</div>
          <div class="cell">Operation</div>
          <div class="cell">Op.Date</div>
          <div class="cell">Command Order</div>
          <div class="cell">Remarks</div>
          <div class="cell">End Date</div>
          <div class="cell">User</div>
        </div>
        <div id="sort-row">@Html.Partial("_DocumentTable", Model)</div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="writableModal" class="modal-container">
  @Html.AntiForgeryToken()
  <div class="modal-content">
    <div class="modal-title">
      <div id="modal-title">Alert clear documents?</div>
      <div><span id="modal-span-close" class="close">&times;</span></div>
    </div>
    <div id="modal-body" class="modal-body">
      You want to &nbsp;<span style="color: red;">clear documents</span>&nbsp; end period more than year?
    </div>
    <div class="modal-footer">
      <div id="modal-close-button" class="button button-danger">Close</div>
      <div id="modal-accept-button" class="button button-primary">Confirm</div>
    </div>
  </div>
</div>

<!-- Modal Announcement -->
<div id="annoModal" class="modal-container">
  <div class="modal-content">
    <div class="modal-title">
      <div id="anno-modal-title">Alert result clear employees</div>
      <div><span id="anno-span-close" class="close">&times;</span></div>
    </div>
    <div id="anno-modal-body" class="modal-body">
    </div>
    <div class="modal-footer">
      <div id="anno-modal-button" class="button button-primary">Ok</div>
    </div>
  </div>
</div>

<!-- Floating Action Button -->
<div class="fab-wrapper">
  <input id="fabCheckbox" type="checkbox" class="fab-checkbox" disabled/>
  <label class="fab" for="fabCheckbox">
    <i class="bi bi-plus-lg"></i>
  </label>
  <div class="fab-wheel">
    <a id="add-emp-icon" class="fab-action fab-action-1" disabled>
      <i class="bi bi-person-fill-add"></i>
    </a>
    <a id="del-emp-icon" class="fab-action fab-action-2" disabled>
      <i class="bi bi-person-fill-dash"></i>
    </a>
    <a id="edit-emp-icon" class="fab-action fab-action-3" disabled>
      <i class="bi bi-person-fill-gear"></i>
    </a>
  </div>
</div>

<script src="~/js/partialDocument.js"></script>
<script src="~/js/documentsModal.js"></script>
<script src="~/js/documentsIndex.js"></script>