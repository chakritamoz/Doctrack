@model IEnumerable<Document>

@{
  ViewData["Title"] = "Documents List";
}

<h2>Documents</h2>
<hr />

<div class="flex-action">
  <span class="wrapper-privilege">
    <a
      asp-action="Create" 
      class="text-decoration-none button button-primary"
      style="color:white;"
    >
      <i class="bi bi-file-earmark-plus-fill"></i>&nbsp;Document
    </a>
  </span>
  <div class="search-contrainer">
    <div class="search-box-document">
      <label for="search-docNo">Document No.</label>
      <input id="search-docNo" class="search-input" placeholder="Document No..." />
    </div>
    <div class="search-box-document">
      <label for="search-docType">Document Type</label>
      <input id="search-docType" class="search-input" placeholder="Document Type..." />
    </div>
    <div class="search-box-document">
      <label for="search-docTitle">Document Title</label>
      <input id="search-docTitle" class="search-input" placeholder="Document Title..." />
    </div>
    <div class="search-box-document">
      <label for="search-employee">Employee Name</label>
      <input id="search-employee" class="search-input" placeholder="Employee Name..." />
    </div>
    <div id="search-document-btn">
      <i class="bi bi-search"></i>&nbsp;Search
    </div>
  </div>
  <div class="search-expand-btn">
    <div class="line-separate"></div>
    <i class="bi bi-list"></i>
    <div class="line-separate"></div>
  </div>
</div>

<!-- Render document table -->
<div id="container-document">
  <div class="container-tab">
    <div id="tab-user" class="active"><p>User</p></div>
    @if (ViewBag.isAdmin)
    {
      <div id="tab-all"><p>All</p></div>
    }
  </div>
  <div id="document-table">
    @Html.Partial("_DocumentTable", Model)
  </div>
</div>

<!-- Modal -->
<div id="writableModal" class="modal-container">
  @Html.AntiForgeryToken()
  <div class="modal-content">
    <div class="modal-title">
      <div id="modal-title"></div>
      <div><span class="close">&times;</span></div>
    </div>
    <hr />
    <div id="modal-body" class="modal-body">
    </div>
    <div class="modal-footer">
      <div id="modal-close-button" class="button button-danger">Close</div>
      <div id="modal-accept-button" class="button button-primary">Confirm</div>
    </div>
  </div>
</div>

<!-- Floating Action Button -->
<div class="fab-wrapper">
  <input id="fabCheckbox" type="checkbox" class="fab-checkbox" disabled/>
  <label class="fab" for="fabCheckbox">
    <i class="bi bi-plus-lg"></i>
  </label>
  <div class="fab-wheel">
    <a id="add-emp-icon" class="fab-action fab-action-1" disabled>
      <i class="bi bi-person-fill-add"></i>
    </a>
    <a id="del-emp-icon" class="fab-action fab-action-2" disabled>
      <i class="bi bi-person-fill-dash"></i>
    </a>
    <a id="edit-emp-icon" class="fab-action fab-action-3" disabled>
      <i class="bi bi-person-fill-gear"></i>
    </a>
  </div>
</div>

<script src="~/node_modules/jquery-touchswipe/jquery.touchSwipe.min.js" type="text/javascript"></script>
<script src="~/js/partialDocument.js"></script>
<script src="~/js/documentsIndex.js"></script>
<script src="~/js/documentsModal.js"></script>