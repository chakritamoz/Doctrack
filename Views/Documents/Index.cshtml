@model IEnumerable<Doctrack.Models.Document>

@{
  ViewData["Title"] = "Documents List";
}

<h2>Documents</h2>
<hr />

<p class="btn btn-primary">
  <a asp-action="Create" style="color:white;">Create Document</a>
</p>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Receipt Date</th>
      <th>Documents No.</th>
      <th>Doc.Title</th>
      <th>Operation</th>
      <th>Op.Date</th>
      <th>Command Order</th>
      <th>Remarks</th>
      <th>End Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr onclick="displayTable('@item.Id')">
        <td>@item.ReceiptDate?.ToString("dd/MM/yyyy")</td>
        <td>@item.Id</td>
        <td>@item.DocumentType.Title</td>
        <td>@item.Operation</td>
        <td>@item.OperationDate?.ToString("dd/MM/yyyy")</td>
        <td>@item.CommandOrder</td>
        <td>@item.RemarkAll</td>
        <td>@item.EndDate?.ToString("dd/MM/yyyy")</td>
        <td>
          <a asp-action="Add" asp-route-id="@item.Id">Add</a>
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
      <tr id=@item.Id class="d-none">
        <td colspan="9">
          <table class="table table-light mb-20 table-bordered table-hover">
            <thead>
              <tr>
                <th>Job</th>
                <th>Title</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Remark</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>หมอ</td>
                <td>นาย</td>
                <td>ชาคริต</td>
                <td>โภคสวัสดิ์</td>
                <td>ทดสอบ</td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    }
  </tbody>
</table>

<script>

  function displayTable(id) {
    var dNone = document.getElementById(id).classList.contains("d-none");
    if(dNone)
    {
      document.getElementById(id).classList.remove("d-none");
    }
    else
    {
      document.getElementById(id).classList.add("d-none");
    }
  }
</script>