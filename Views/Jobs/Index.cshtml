@model IEnumerable<Doctrack.Models.Job>

@{
    ViewData["Title"] = "Jobs List";
}

<h2>Jobs</h2>
<hr />

<div class="flex-action">
  <div class="button button-primary">
    <a asp-action="Create" style="color:white">New Job</a>
  </div>
  <div class="search-box">
    <input id="search-box" placeholder="Search Title..." />
    <div id="search-btn"><i class="bi bi-search"></i></div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.Id</td>
        <td>@item.Title</td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
          <span> |</span>
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>