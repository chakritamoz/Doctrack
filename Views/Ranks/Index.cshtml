@model IEnumerable<Doctrack.Models.Rank>

@{
  ViewData["Title"] = "Ranks List";
}

<h2>Ranks Management</h2>
<hr />

<div class="flex-action">
  <div class="wrapper-privilege">
    @if (ViewBag.isAdmin){
      <a
        asp-action="Create"
        class="button button-primary"
        style="color:white"
      >
        <i class="bi bi-person-vcard-fill"></i>
        &nbsp;
        Rank
      </a>
      <a
        asp-action="BindJob"
        class="button button-primary"
        style="color: white;"
      >
        <i class="bi bi-diagram-2-fill"></i>
        &nbsp;
        Bind Job
      </a>
    }else{
      <a
        asp-action="Create"
        class="button button-primary disabled-btn"
        style="color: white;"
      >
        <i class="bi bi-person-vcard-fill"></i>
        &nbsp;
        Rank
      </a>
    }
  </div>
  <div class="search-box">
    <input id="search-box" placeholder="Search Title..." />
    <div id="search-btn"><i class="bi bi-search"></i></div>
  </div>
</div>

<div id="document-table">
  @Html.Partial("_RanksTable", Model)
</div>


<script>
  $('#search-box').keypress(function(event) {
    if (event.key === "Enter") {
      event.preventDefault();
      document.getElementById('search-btn').click();
    }
  });
  
  $('#search-btn').click(function() {
  const queryStr = $('#search-box').val();
  $.ajax({
    url: '/Ranks/Index/',
    type: 'GET',
    data: {
      'queryStr': queryStr,
      'isSearch': true
    },
    success: function (data) { 
      $('#document-table').html(data);
    }
  })
})
</script>