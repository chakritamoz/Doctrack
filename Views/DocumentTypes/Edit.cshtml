@model Doctrack.Models.DocumentType

@{
  ViewData["Title"] = "Edit Document Type";
}

<h2>Edit</h2>
<h3>Document Type</h3>
<hr />

<form asp-action="Edit">
  <input type="hidden" asp-for="Id">
  <div class="form-group">
    <label asp-for="Title">Title</label>
    <input asp-for="Title" class="form-control" autocomplete="off" autofocus/>
    <span asp-validation-for="Title" class="text-danger"></span>
  </div>
  
  <div class="form-group">
    <label asp-for="Period">Period(Day)</label>
    <input asp-for="Period" class="form-group" autocomplete="off"/>
    <span asp-validation-for="Period" class="text-danger"></span>
  </div>

  <div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
  </div>
</form>

<div>
  <a asp-action="Index">Back to List</a>
</div>