@model IEnumerable<Doctrack.Models.DocumentType>

@{
  ViewData["Title"] = "Document Types List";
}

<h2>Document Types</h2>
<hr />

<p class="btn btn-primary">
  <a asp-action="Create" style="color:white">Create Document Type</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Period Warning(Day)</th>
      <th>Period End(Day)</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.Id</td>
        <td>@item.Title</td>
        <td>@item.PeriodWarning</td>
        <td>@item.PeriodEnd</td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>