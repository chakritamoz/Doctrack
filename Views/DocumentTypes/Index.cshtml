@model IEnumerable<Doctrack.Models.DocumentType>

@{
  ViewData["Title"] = "Document Types List";
}

<h2>Document Types</h2>
<hr />

<div class="flex-action">
  <div class="button button-primary">
    <a asp-action="Create" style="color:white">New Document</a>
  </div>
  <div class="search-box">
    <input id="search-box" placeholder="Search Title..." />
    <div id="search-btn"><i class="bi bi-search"></i></div>
  </div>
</div>
@if(Model.Count() == 0) {
  <table class="table not-found">
    <thead>
    <tr>
      <th>Search Not Found...</th>
    </tr>
    </thead>
  </table>
}else{
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Warning (Day)</th>
        <th>Deadline (Day)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>@item.Id</td>
          <td>@item.Title</td>
          <td>@item.PeriodWarning</td>
          <td>@item.PeriodEnd</td>
          <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><span> |</span>
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}


<script src="~/js/documentTypes.js" asp-append-version="true"></script>