@model IEnumerable<Doctrack.Models.Employee>

@{
  ViewData["Title"] = "Employees List";
}

<h2>Employees Management</h2>
<hr />

<div class="flex-action">
  <div class="wrapper-privilege">
    @if (ViewBag.isAdmin){
      <a
        asp-action="Create"
        class="button button-primary"
        style="color:white;"
      >
        <i class="bi bi-people-fill"></i>
        &nbsp;
        Employee
      </a>
      <a
        id="clear-emp-btn"
        class="button button-danger delete-btn"
        style="color: white;"   
      >
        <i class="bi bi-trash3-fill"></i>
        &nbsp;
        Clear
      </a>
    }else{
      <a
        asp-action="Create"
        class="button button-primary disabled-btn"
        style="color:white;"
      >
        <i class="bi bi-people-fill"></i>
        &nbsp;
        Employee
      </a>
    }
  </div>
  <div class="search-box">
    <input id="search-box" placeholder="Search Title..." />
    <div id="search-btn"><i class="bi bi-search"></i></div>
  </div>
</div>

<div id="document-table">
  @Html.Partial("_EmployeeTable", Model)
</div>

<!-- Modal -->
<div id="writableModal" class="modal-container">
  <div class="modal-content">
    <div class="modal-title">
      <div id="modal-title">Alert clear employee?</div>
      <div><span class="close">&times;</span></div>
    </div>
    <div id="modal-body" class="modal-body">
      Are you sure to clear employee empty document?
    </div>
    <div class="modal-footer">
      <div id="modal-close-button" class="button button-danger">Close</div>
      <div id="modal-accept-button" class="button button-primary">Confirm</div>
    </div>
  </div>
</div>

<!-- Modal Announcement -->
<div id="annoModal" class="modal-container">
  <div class="modal-content">
    <div class="modal-title">
      <div id="anno-modal-title">Alert result clear employee?</div>
      <div><span class="close">&times;</span></div>
    </div>
    <div id="anno-modal-body" class="modal-body">
    </div>
    <div class="modal-footer">
      <div id="anoo-modal-button" class="button button-primary">Ok</div>
    </div>
  </div>
</div>


<script>
  $('#search-box').keypress(function(event) {
    if (event.key === "Enter") {
      event.preventDefault();
      document.getElementById('search-btn').click();
    }
  });
  
  $('#search-btn').click(function() {
    var queryStr = $('#search-box').val();
    $.ajax({
      url: 'Employees/Index/',
      type: 'GET',
      data: { 
        'queryStr': queryStr,
        'isSearch': true
      },
      success: function(data)
      {
        $('#document-table').html(data);
      }
    });
  })
</script>
<script src="~/js/documentsModal.js"></script>
<script src="~/js/employeesIndex.js"></script>