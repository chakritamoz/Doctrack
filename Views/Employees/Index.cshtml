@model IEnumerable<Doctrack.Models.Employee>

@{
  ViewData["Title"] = "Employees List";
}

<h2>Employees</h2>
<hr />

<p class="btn btn-primary">
  <a asp-action="Create" style="color:white;">Create Employee</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Job</th>
      <th>Title</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.Id</td>
        <td>@item.Job.Title</td>
        <td>@item.Rank.Title</td>
        <td>@item.FirstName</td>
        <td>@item.LastName</td>
        @{
          if (item.PhoneNumber != null)
          {
            var n0_2 = item.PhoneNumber.Substring(0,3);
            var n3_5 = item.PhoneNumber.Substring(3,3);
            var n6_9 = item.PhoneNumber.Substring(6,4);
            <td>@(n0_2)-@(n3_5)-@(n6_9)</td>
          }
          else
          {
            <td>@item.PhoneNumber</td>
          }
        }
        
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>